assign [class="discord"] → $ws4
for_window [class="discord"] move to workspace $ws4

for_window [class="Simplescreenrecorder"] floating enable

set $discord_exec "/usr/bin/discord"
exec --no-startup-id i3-msg 'exec $discord_exec'

# Pulse Audio controls
bindsym XF86AudioRaiseVolume exec --no-startup-id pamixer -i 1 & pkill -RTMIN+1 i3blocks
bindsym XF86AudioLowerVolume exec --no-startup-id pamixer -d 1 & pkill -RTMIN+1 i3blocks
bindsym XF86AudioMute exec --no-startup-id pamixer --toggle-mute & pkill -RTMIN+1 i3blocks

# Media player controls
bindsym XF86AudioPlay exec playerctl play-pause & pkill -RTMIN+1 i3blocks
bindsym XF86AudioNext exec playerctl next & pkill -RTMIN+1 i3blocks
bindsym XF86AudioPrev exec playerctl previous & pkill -RTMIN+1 i3blocks

# reload the configuration file
bindsym $mod+Shift+c reload
# restart i3 inplace (preserves your layout/session, can be used to upgrade i3)
bindsym $mod+Shift+r restart
# exit i3 (logs you out of your X session)
#bindsym $mod+Shift+e exec "i3-nagbar -t warning -m 'You pressed the exit shortcut. Do you really want to exit i3? This will end your X session.' -b 'Yes, exit i3' 'i3-msg exit'"
bindsym $mod+Shift+e exit

# resize window (you can also use the mouse for that)
mode "resize" {
        # same bindings, but for the arrow keys
        bindsym Left resize shrink width 10 px or 10 ppt
        bindsym Up resize grow height 10 px or 10 ppt
        bindsym Down resize shrink height 10 px or 10 ppt
        bindsym Right resize grow width 10 px or 10 ppt

        bindsym Ctrl+Left resize shrink width 5 px or 5 ppt
        bindsym Ctrl+Up resize grow height 5 px or 5 ppt
        bindsym Ctrl+Down resize shrink height 5 px or 5 ppt
        bindsym Ctrl+Right resize grow width 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym m mode "move"
}

bindsym $mod+r mode "resize"

# move window (you can also use the mouse for that)
mode "move" {
        bindsym Left resize shrink right 10 px or 10 ppt; resize grow left 10 px or 10 ppt
        bindsym Up resize shrink down 10 px or 10 ppt; resize grow up 10 px or 10 ppt 
        bindsym Down resize shrink up 10 px or 10 ppt; resize grow down 10 px or 10 ppt
        bindsym Right resize shrink left 10 px or 10 ppt; resize grow right 10 px or 10 ppt

        bindsym Ctrl+Left resize shrink right 5 px or 5 ppt; resize grow left 5 px or 5 ppt
        bindsym Ctrl+Up resize shrink down 5 px or 5 ppt; resize grow up 5 px or 5 ppt 
        bindsym Ctrl+Down resize shrink up 5 px or 5 ppt; resize grow down 5 px or 5 ppt
        bindsym Ctrl+Right resize shrink left 5 px or 5 ppt; resize grow right 5 px or 5 ppt

        # back to normal: Enter or Escape
        bindsym Return mode "default"
        bindsym Escape mode "default"
        bindsym r mode "resize"
}

bindsym $mod+m mode "move"

# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
#        status_command i3blocks
        status_command bumblebee-status -m spotify cmus amixer nic disk:root cpu memory date time -p root.path=/ root.format="/ {left}" memory.format="{percent:5.1f}%" nic.exclude="lo,wlp5s0" -t gruvbox-powerline
}
